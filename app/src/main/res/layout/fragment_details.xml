<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.TownDetailsFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/townDetailsName"
            android:text="Paris"
            android:layout_alignParentStart="true"
            android:textSize="40dp"
            android:textColor="#000000"
            android:paddingLeft="30dp"
            android:paddingTop="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/townDetailsTemp"
            android:text="10 C°"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/townDetailsName"
            android:textSize="30dp"
            android:textColor="#000000"
            android:paddingRight="20dp"
            android:paddingTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/townDetailsDate"
            android:text="01/02/1996"
            android:textSize="15dp"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:layout_below="@id/townDetailsName"
            android:layout_alignLeft="@id/townDetailsName" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/townDetailsHum"
            android:text="Humidity : 15%"
            android:layout_below="@id/townDetailsTemp"
            android:layout_alignRight="@id/townDetailsTemp"
            android:textColor="#000000"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/townDetailsAtm"
            android:text="Pression : 1008 Pa"
            android:layout_below="@id/townDetailsHum"
            android:layout_alignRight="@id/townDetailsHum"
            android:textColor="#000000"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"/>
        <ImageView
            android:id="@+id/townDetailsWeather"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/townDetailsName"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5 Prochains Jours"
            android:background="#202020"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/townRecyclerDay"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal">

        </android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Journée"
            android:background="#202020"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/townRecyclerTime"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>
